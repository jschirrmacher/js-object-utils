{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "docker:disableMajor",
    "group:recommended",
    "group:monorepos"
  ],
  "labels": [
    "Renovate"
  ],
  "onboarding": false,
  "pinDigests": true,
  "semanticCommitType": "cicd",
  "rangeStrategy": "auto",
  "golang": {
    "enabled": false
  },
  "schedule": ["at 5:00 pm on Saturday"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "packageNames": ["node"],
      "allowedVersions": "!/^18\\./"
    }
  ]
}